global {
        project project
}

superclass common {
        openstack {
                user_data {
                        adduser --disabled-password --gecos "" bob
                        adduser --disabled-password --gecos "" janet
                        adduser --disabled-password --gecos "" alice
                        adduser --disabled-password --gecos "" tim
                        echo bob:U6aMy0wojraho | sudo chpasswd -e
                        echo janet:U6aMy0wojraho | sudo chpasswd -e
                        echo alice:U6aMy0wojraho | sudo chpasswd -e
                        echo tim:U6aMy0wojraho | sudo chpasswd -e
                        addgroup developers
                        adduser janet developers
                        adduser tim developers
                        echo developers:U6aMy0wojraho | sudo chpasswd -e
                        apt-get update
                        wget https://apt.puppetlabs.com/puppetlabs-release-pc1-xenial.deb
                        dpkg -i puppetlabs-release-pc1-xenial.deb
                        apt-get update
                        apt-get -y install puppet-agent
                        echo "10.0.53.115 master16.openstacklocal master16" >> /etc/hosts
                        wget https://raw.githubusercontent.com/robellm/ACIT-4430/main/manifests/testagent.pp
                        /opt/puppetlabs/puppet/bin/puppet apply testagent.pp
                }
                image Ubuntu16.04
                flavor m1.small
                keypair master16key
        }
        network eth0 {
                net netsys_net
                address dhcp
        }
}

host vm_storage-server1 {
        superclass common
        find /etc/puppetlabs/puppet/ssl -name vm-storage-server2.pem -delete
}
